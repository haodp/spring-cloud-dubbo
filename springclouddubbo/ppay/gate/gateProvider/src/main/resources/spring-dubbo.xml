<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://code.alibabatech.com/schema/dubbo
       http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <dubbo:application name="tx-dubbo-order"/>


    <dubbo:registry protocol="zookeeper" address="localhost:2181" />

    <dubbo:protocol accesslog="true" name="dubbo" port="20883"/>

    <dubbo:service interface="com.lakala.gate.api.service.OrderService" ref="orderService"  />

    <dubbo:provider filter="spanProvider" retries="0" timeout="300000" />
    <dubbo:consumer filter="spanConsumer" retries="0" timeout="300000"  />
</beans>